<% provide(:title, "Log In") %>
<h1>Log in here</h1>
<div class="row">
    <div class="medium-6 columns medium-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>

            <%= f.label :email %>
            <%= f.email_field :email %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.submit "Log in", class: "button large" %>
        <% end %>
        <p> New user? <%= link_to "sign up", new_user_url %></p>
    </div>
</div>
